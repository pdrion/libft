char			*ft_itoa(int n)
{
  unsigned int nb;
  int len;
  char *result;

  nb = 0;
  len = 0;
  result = NULL;
  
  len = (n < 0 ? 2 : 1);
  while (n)
    {
      n = n / 10;
      len++;
    }
  if (!(str = malloc(sizeof(char) * len + 1)))
		return (NULL);
  result [len--] = '\0';
  nb = (n < 0 ? -n : n);
  while (len)
    {
      result[len] = nb % 10 + 48;
      nb = nb / 10;
      len--;
    }
  result[0] = (n < 0 ? '-' : NULL);
  return (result)
}

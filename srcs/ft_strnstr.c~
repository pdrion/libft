#include "libft.h"

char	*strnstr(const char *haystack, const char *needle, size_t len)
{
	char	*begin_needle;
	char	*str;
	size_t	i;

	begin_needle = (char *)needle;
	str = (char *)haystack;
	i = 0;
	if (begin_needle == NULL)
		return (str);
	while (*str)
	{
		if (*str++ == *begin_needle)
		{
			i = 0;
			while (str[i] == begin_needle[i] && i < len)
				i++;
			if (i == len)
				return (str);
		}
	}
	return (NULL);
}

void	*ft_memcpy(void *dst, const void *src, size_t n)
{
	unsigned int	i;
	char			*d;
	const char		*s;

	d = dst;
	s = src;
	i = 0;
	while (i < n && s[i] != '\0')
	{
		d[i] = s[i];
		i++;
	}
	if (i != n)
		d[i]= '\0';
	return (dst);
}
